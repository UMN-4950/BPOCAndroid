<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/stranger_icon"
        android:contentDescription="Personal_Icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bpoc"/>

    <TextView
        android:id="@+id/stranger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:text="Tom Jerry"
        android:layout_alignTop="@+id/stranger_icon"
        android:layout_toEndOf="@+id/stranger_icon"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/stranger_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="1" />

    <Button
        android:id="@+id/add_new_stranger"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignBaseline="@+id/stranger_name"
        android:layout_alignBottom="@+id/stranger_name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/add_result"
        android:layout_alignBottom="@+id/stranger_icon"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:layout_height="32dp"
        android:layout_width="wrap_content"
        android:visibility="gone"/>
</RelativeLayout>